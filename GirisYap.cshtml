
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <title>Login Giriş</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="keywords" content="Art Sign Up Form Responsive Widget, Audio and Video players, Login Form Web Template, Flat Pricing Tables, Flat Drop-Downs, Sign-Up Web Templates,
		Flat Web Templates, Login Sign-up Responsive Web Template, Smartphone Compatible Web Template, Free Web Designs for Nokia, Samsung, LG, Sony Ericsson, Motorola Web Design" />
    <link href="~/weblogin/css/style.css" rel="stylesheet" type="text/css" />

    <link href="~/weblogin/css/fontawesome-all.css" rel="stylesheet" />

    <link href="//fonts.googleapis.com/css?family=Raleway:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">


</head>


<body>
    <h1>Restaraunt Login Giriş Panelli</h1>
    <div class=" w3l-login-form">
        <h2>Giriş Yeri</h2>
        @using (Html.BeginForm("GirisYap", "Login", FormMethod.Post))
        {



            <div class=" w3l-form-group">
                <label>Mail Adresiniz:</label>
                <div class="group">
                    <i class="fas fa-user"></i>
                    <input type="text" class="form-control" placeholder="Mail Adresinizi Giriniz." required="required" name="MAIL" />
                </div>
            </div>
            <div class=" w3l-form-group">
                <label>Sifre:</label>
                <div class="group">
                    <i class="fas fa-unlock"></i>
                    <input type="password" class="form-control" placeholder="Sifre" required="required" name="SIFRE" />
                </div>
            </div>
            <div class="Sifremi Unuttum">
                <a href="#">Sifremi Unuttum?</a>
                <p><input type="checkbox">Sifremi Hatırla</p>
            </div>
            <button type="submit">Giriş Yap</button>
        }
        <p class=" w3l-register-p">Kayıt Olmak İçin Tıklayın..<a href="/KayitOl/Kayit/" class="register"> Kayit Ol</a></p>
    </div>
    <footer>
        <p class=""> &copy; 2020</p>
    </footer>

</body>

</html>
